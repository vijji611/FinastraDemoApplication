pipeline {
    agent any
    tools{
        jdk "java8"
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean --file FinastraDemoApplication/pom.xml'
            }
        }
        stage('Test') { 
            steps {
                sh 'mvn test --file FinastraDemoApplication/pom.xml' 
            }
            post {
                always {
                    junit(allowEmptyResults: false,
                    keepLongStdio: true,
                    testResults: "**/test-results/functional-tests.xml")
                } 
           } 
      }
    }
}
